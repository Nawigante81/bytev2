# Postmark Email Configuration
# Copy to .env.local and fill in your actual values

# Postmark Server Token (required)
POSTMARK_SERVER_TOKEN=your_postmark_server_token_here

# Email Configuration
FROM_EMAIL=noreply@byteclinic.pl
FROM_NAME=ByteClinic
ADMIN_EMAIL=admin@byteclinic.pl

# Optional: Custom Postmark endpoint (for testing)
# POSTMARK_ENDPOINT=https://api.postmarkapp.com/email

# Example of how to set these in Supabase:
# supabase secrets set POSTMARK_SERVER_TOKEN=your_actual_token
# supabase secrets set FROM_EMAIL=noreply@byteclinic.pl
# supabase secrets set FROM_NAME=ByteClinic
# supabase secrets set ADMIN_EMAIL=admin@byteclinic.pl